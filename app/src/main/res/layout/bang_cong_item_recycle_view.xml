<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_10"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    >
    <!-- Layout chứa thông tin nhân viên -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <!-- Avatar và biểu tượng checked -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">
            <!-- Hình đại diện -->
            <ImageView
                android:id="@+id/bangcongavt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/bang_cong_icon"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle" />
        </FrameLayout>
        <!-- Thông tin nhân viên -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- Thời gian và ngày tháng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/name_bang_cong"
                    style="@style/TextStyle_16_600"
                    android:textColor="@color/textcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bảng tổng hợp công tháng 09/2024"
                    />
            </LinearLayout>
            <TextView
                style="@style/TextStyle_14_400"
                android:id="@+id/time_bang_cong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/09/2024 13:30"
                android:textColor="@color/textcolor"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
