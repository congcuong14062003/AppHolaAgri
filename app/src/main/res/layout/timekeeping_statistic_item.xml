<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_rounded_10"
    android:id="@+id/item_timekeeping"
    android:layout_marginBottom="15dp">
    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: "
        style="@style/TextStyle_16_600"
        android:textColor="@color/textcolor"
 />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/shiftCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca CH"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_400"
        />
        <TextView
            android:id="@+id/period"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(06:30 - 11:30)"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_600" />
        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vào"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_400"
            />
        <TextView
            android:id="@+id/checkinTime"
            android:layout_marginStart="5dp"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:30"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_600"
            />
        <TextView
            android:gravity="end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_400"
            />
        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ra"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_400"
          />
        <TextView
            android:id="@+id/checkoutTime"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:40"
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_600"
            />
    </LinearLayout>
</LinearLayout>
