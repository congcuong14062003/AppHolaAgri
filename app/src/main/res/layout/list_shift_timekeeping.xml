<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/shiftCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca CH"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_400" />

            <TextView
                android:id="@+id/period"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(06:30 - 11:30)"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vào"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_400" />

            <TextView
                android:id="@+id/checkinTime"
                android:layout_marginStart="5dp"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:30"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_600" />

            <TextView
                android:gravity="end"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_400" />

            <TextView
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ra"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_400" />

            <TextView
                android:id="@+id/checkoutTime"
                android:gravity="end"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:40"
                android:textColor="@color/textcolor"
                style="@style/TextStyle_14_600" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reason_refused_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/reason_refused"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ chối chấm công: "
            android:textColor="#fa5e35"
            style="@style/TextStyle_14_400" />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do bỏ làm rồi nhậu, không chịu làm việc."
            android:textColor="@color/textcolor"
            style="@style/TextStyle_14_400" />
    </LinearLayout>

    <!-- Dòng kẻ -->
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dashed_line"
        android:layerType="software" />
</LinearLayout>
