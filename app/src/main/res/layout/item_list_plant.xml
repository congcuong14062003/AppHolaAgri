<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_rounded_10"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_plantation"
            style="@style/TextStyle_16_600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vườn sầu riêng Long Thành"
            android:textColor="@color/textcolor"
            />
    </LinearLayout>

    <!-- Dòng kẻ -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        android:layerType="software"
        android:src="@drawable/dashed_line" />

    <!-- Thông tin  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextStyle_14_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diện tích: "
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/acreage"
                style="@style/TextStyle_14_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="98 ha"
                android:textColor="@color/textcolor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextStyle_14_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lô: "
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/lot_number"
                style="@style/TextStyle_14_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="98 ha"
                android:textColor="@color/textcolor" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextStyle_14_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm quan trắc: "
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/monitoring_point"
                style="@style/TextStyle_14_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="98 ha"
                android:textColor="@color/textcolor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                style="@style/TextStyle_14_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số cây: "
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/number_plant"
                style="@style/TextStyle_14_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="98 ha"
                android:textColor="@color/textcolor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
